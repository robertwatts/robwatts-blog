---
import { getBlogEntries, getContentType } from "../../utils";
import Layout from "../../layouts/Layout.astro"
import Entry from "../../components/Entry.astro"

// Generate a path for each entry
export async function getStaticPaths() {
  return (await getBlogEntries()).map(entry => ({
    params: { slug: entry.slug }, 
    props: { entry },
  }));
}

const { entry } = Astro.props;
---
<Layout>
  <Entry collectionEntry={entry} feedMode={false} />  
</Layout
